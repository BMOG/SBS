<%= provide(:title, (t 'create_scenraio')) %>
<h1><%= t 'create_scenario' %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@scenario) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label t 'name' %>
      <%= f.text_field :name %>

      <%= f.label t 'definition' %>
      <%= f.text_field :definition %>

      <%= f.submit "#{t :create_scenario}", :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>