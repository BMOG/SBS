<% @hex = @context.current_hex %>

<polyline points="
  <%= @grid.x_south_west(@hex) %>,<%= @grid.y_south_west(@hex) %>
  <%= @grid.x_north_west(@hex) %>,<%= @grid.y_north_west(@hex) %>"
  style="fill:none;stroke:rgb(160,160,180);stroke-width:5"
/>    

<polyline points="
  <%= @grid.x_north_west(@hex) %>,<%= @grid.y_north_west(@hex) %>
  <%= @grid.x_north(@hex) %>,<%= @grid.y_north(@hex) %>
  <%= @grid.x_north_east(@hex) %>,<%= @grid.y_north_east(@hex) %>"
  style="fill:none;stroke:rgb(90,90,110);stroke-width:5"
/>  

<polyline points="
  <%= @grid.x_north_east(@hex) %>,<%= @grid.y_north_east(@hex) %>
  <%= @grid.x_south_east(@hex) %>,<%= @grid.y_south_east(@hex) %>"
  style="fill:none;stroke:rgb(160,160,180);stroke-width:5"
/>    

<polyline points="
  <%= @grid.x_south_east(@hex) %>,<%= @grid.y_south_east(@hex) %>
  <%= @grid.x_south(@hex) %>,<%= @grid.y_south(@hex) %>
  <%= @grid.x_south_west(@hex) %>,<%= @grid.y_south_west(@hex) %>"
  style="fill:none;stroke:rgb(230,230,250);stroke-width:5"
/>  
