<% @hex = @context.current_hex %>

<polyline points="
  <%= @grid.x_vertex(@hex, :so) %>,<%= @grid.y_vertex(@hex, :so) %>
  <%= @grid.x_vertex(@hex, :no) %>,<%= @grid.y_vertex(@hex, :no) %>"
  style="fill:none;stroke:rgb(160,160,180);stroke-width:5"
/>    

<polyline points="
  <%= @grid.x_vertex(@hex, :no) %>,<%= @grid.y_vertex(@hex, :no) %>
  <%= @grid.x_vertex(@hex, :n) %>,<%= @grid.y_vertex(@hex, :n) %>
  <%= @grid.x_vertex(@hex, :ne) %>,<%= @grid.y_vertex(@hex, :ne) %>"
  style="fill:none;stroke:rgb(90,90,110);stroke-width:5"
/>  

<polyline points="
  <%= @grid.x_vertex(@hex, :ne) %>,<%= @grid.y_vertex(@hex, :ne) %>
  <%= @grid.x_vertex(@hex, :se) %>,<%= @grid.y_vertex(@hex, :se) %>"
  style="fill:none;stroke:rgb(160,160,180);stroke-width:5"
/>    

<polyline points="
  <%= @grid.x_vertex(@hex, :se) %>,<%= @grid.y_vertex(@hex, :se) %>
  <%= @grid.x_vertex(@hex, :s) %>,<%= @grid.y_vertex(@hex, :s) %>
  <%= @grid.x_vertex(@hex, :so) %>,<%= @grid.y_vertex(@hex, :so) %>"
  style="fill:none;stroke:rgb(230,230,250);stroke-width:5"
/>  
